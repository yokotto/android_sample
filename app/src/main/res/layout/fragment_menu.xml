<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment"
    android:background="@color/white">

    <Button
        android:id="@+id/fragment_button_anim1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="アニメ1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/color_button_salmon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/fragment_button_anim2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="アニメ2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:background="@drawable/color_button_yellow"
        app:layout_constraintStart_toStartOf="@id/fragment_button_anim1"
        app:layout_constraintTop_toBottomOf="@id/fragment_button_anim1" />

    <Button
        android:id="@+id/fragment_button_anim3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="アニメ3"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/color_button_golden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_button_anim1"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <Button
        android:id="@+id/fragment_button_anim4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="アニメ4"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/color_button_lime"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="@id/fragment_button_anim3"
        app:layout_constraintTop_toBottomOf="@id/fragment_button_anim3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_main_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:weightSum="1">

    <ImageView
        android:id="@+id/list_recycler2_imageButton"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:src="@drawable/rabbits"
        android:background="@color/white"
        android:layout_weight="0"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/list_recycler2_number"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="0.2"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/list_recycler2_text"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="0.8"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

    <android.widget.Button
        android:id="@+id/list_recycler2_button"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:text="@string/proliferation"
        android:background="@color/gray1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

</LinearLayout>
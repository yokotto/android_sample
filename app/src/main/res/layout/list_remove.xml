<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <TextView
        android:id="@+id/simple_list_item"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="@string/bar2"
        android:textSize="24sp"
        android:background="@color/lime1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/simple_list_amount"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/bar2"
        android:gravity="start"
        android:textSize="24sp"
        android:background="@color/lime1"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/simple_list_item"
        app:layout_constraintStart_toEndOf="@id/simple_list_item" />

    <View
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/simple_list_item"
        app:layout_constraintStart_toStartOf="@id/simple_list_item"/>

    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/simple_list_amount"
        app:layout_constraintStart_toStartOf="@id/simple_list_amount"/>

</androidx.constraintlayout.widget.ConstraintLayout>